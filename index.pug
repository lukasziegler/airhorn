doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Project Airhorn
    style
      include ./docs/styles.css
    link(rel='stylesheet', href='styles.css')
    script(src='js/index.js')
  body
    .profile.l-left-column
      .profile__picture
      .teaser
        .teaser__text Airhorn bla bla a
      span.credits airhorn credits â™¥

    .content.l-right-column

      .press-me
        img.press-me__image(src='media/click-400px.gif' srcset='media/click-400px.gif 400w, media/click.gif 963w' width=400 height=75)

      .cards
        .card(onclick="play(1, 2000)")
          .card__giphy.card__giphy--cover
            img.card__giphy-gif(src="media/airhorn/image.gif")
          .card__overlay
            .card__overlay-title Airhorn

        .card(onclick="play(2, 2000)")
